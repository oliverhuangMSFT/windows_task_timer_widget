<Window x:Class="TimerWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerWidget"
        xmlns:conv="clr-namespace:TimerWidget.Converters"
        mc:Ignorable="d"
        Title="Task Timer"
        Icon="app.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        SizeToContent="Height"
        Width="310"
        ResizeMode="NoResize"
        ShowInTaskbar="True">

    <Window.Resources>
        <conv:BoolToPlayPauseConverter x:Key="PlayPauseConv"/>
        <conv:InverseBoolConverter x:Key="InverseBoolConv"/>
        <conv:BoolToVisibilityInverseConverter x:Key="NotExpiredVisConv"/>
        <conv:BoolToVisibilityConverter x:Key="ExpiredVisConv"/>
        <conv:BoolToEditIconConverter x:Key="EditIconConv"/>

        <!-- Dark button style -->
        <Style x:Key="DarkBtn" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#606060"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource DarkBtn}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A8AD4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallBtn" TargetType="Button" BasedOn="{StaticResource DarkBtn}">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="28"/>
        </Style>

        <!-- Flash animation storyboard -->
        <Storyboard x:Key="FlashBorder" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="AlertBorder"
                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            From="#2D2D2D" To="#FF3333" Duration="0:0:0.5"
                            AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="AlertBorder" CornerRadius="8" BorderThickness="3"
            BorderBrush="#2D2D2D" Background="#1E1E1E"
            MouseWheel="Widget_MouseWheel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2D2D2D" CornerRadius="6,6,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown" Cursor="SizeAll">
                <DockPanel Margin="10,6">
                    <TextBlock Text="⏱ Task Timer" Foreground="#E0E0E0"
                               FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                        <Button Content="—" Style="{StaticResource SmallBtn}" Click="Minimize_Click"
                                Margin="0,0,4,0" ToolTip="Minimize"/>
                        <Button Content="✕" Style="{StaticResource SmallBtn}" Click="Close_Click"
                                ToolTip="Close"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Timer List (above input) -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Timers}" Margin="0,2,0,2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="4,2" CornerRadius="4" ClipToBounds="True"
                                MouseWheel="TimerRow_MouseWheel">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#2A2A2A"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                            <Setter Property="BorderBrush" Value="#0078D4"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="RowFlash">
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            From="#4A1515" To="#FF3333" Duration="0:0:0.5"
                                                            AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <StopStoryboard BeginStoryboardName="RowFlash"/>
                                            </DataTrigger.ExitActions>
                                            <Setter Property="Background" Value="#4A1515"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <!-- Progress bar background (green when running, yellow when paused) -->
                                <Border HorizontalAlignment="Stretch" CornerRadius="4"
                                        Visibility="{Binding IsExpired, Converter={StaticResource NotExpiredVisConv}}">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="{Binding Progress}" ScaleY="1"/>
                                    </Border.RenderTransform>
                                    <Border.RenderTransformOrigin>
                                        <Point X="0" Y="0.5"/>
                                    </Border.RenderTransformOrigin>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#1B3A1B"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                    <Setter Property="Background" Value="#3A3A1B"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                                <!-- Content overlay -->
                                <DockPanel Margin="8,5">
                                    <!-- Right-side buttons -->
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="6,0,0,0">
                                        <Button Content="{Binding IsEditing, Converter={StaticResource EditIconConv}}"
                                                Style="{StaticResource SmallBtn}" ToolTip="Toggle time edit (scroll to adjust)"
                                                Command="{Binding DataContext.ToggleEditCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="{Binding IsRunning, Converter={StaticResource PlayPauseConv}}"
                                                Style="{StaticResource SmallBtn}" Margin="4,0,0,0"
                                                Command="{Binding DataContext.PauseResumeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Visibility="{Binding IsExpired, Converter={StaticResource NotExpiredVisConv}}"/>
                                        <Button Content="✕" Style="{StaticResource SmallBtn}" Margin="4,0,0,0"
                                                Command="{Binding DataContext.RemoveTimerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                    <!-- Title and time -->
                                    <TextBlock Foreground="#E0E0E0" FontSize="13" VerticalAlignment="Center">
                                        <Run Text="{Binding Title, Mode=OneWay}"/>
                                        <Run Text="  " />
                                        <Run Text="{Binding RemainingMinutesDisplay, Mode=OneWay}" Foreground="#AAAAAA"/>
                                    </TextBlock>
                                </DockPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Input Area (bottom) -->
            <Border Grid.Row="2" Background="#252525" Padding="10,8" CornerRadius="0,0,6,6">
                <DockPanel>
                    <Button Content="Start" Style="{StaticResource AccentBtn}" DockPanel.Dock="Right"
                            Command="{Binding AddTimerCommand}" Padding="14,4" Margin="6,0,0,0"/>
                    <TextBlock Text="{Binding NewTimerDurationDisplay}" Foreground="#AAAAAA"
                               FontSize="13" VerticalAlignment="Center" DockPanel.Dock="Right"
                               Margin="6,0,0,0" MinWidth="40"/>
                    <TextBox x:Name="TitleInput" Background="#3C3C3C" Foreground="#E0E0E0"
                             BorderThickness="0" Padding="6,4" FontSize="13"
                             Text="{Binding NewTimerTitle, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             KeyDown="TitleInput_KeyDown">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Tag" Value="Title..."/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>
